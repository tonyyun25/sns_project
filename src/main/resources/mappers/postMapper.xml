<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.lytear.sns.post.dao.PostDAO">
 	<insert id="insertTimeline" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			,`userName`<!-- 여기에 칼럼명이 `userName`이 아니라 `윤진일`로 인식한다 -->
 			,`content`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{userNameTest}
 			,#{content}
 			,#{imagePath}
 			,now()
 			,now()
 		)
 	
 	</insert>
 	
 	<select id="selectSnsList" resultType="com.lytear.sns.post.model.Post"
 	parameterType="int">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`post`
 		<!--  WHERE `userId` = #{userId} -->
 	
 		ORDER BY `id` DESC
 	</select>
 	
 </mapper>
 